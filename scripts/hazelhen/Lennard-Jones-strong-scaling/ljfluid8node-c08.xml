<?xml version='1.0' encoding='UTF-8'?>
<mardyn version="20100525" >

  <simulation type="MD" >
    <integrator type="LeapfrogRMM" >
      <!-- MD ODE integrator -->
      <timestep unit="reduced" >0.01</timestep>
    </integrator>

    <run>
      <currenttime>0</currenttime>
      <production>
        <steps>100</steps>
      </production>
    </run>

    <ensemble type="NVT">
      <!-- Nparticles determined by the input file -->
      <temperature unit="reduced" >0.0003166816826564526</temperature>
      <domain type="box">
          <lx>3120</lx>
          <ly>3120</ly>
          <lz>3120</lz>
      </domain>

      <components>
          <moleculetype id="1" name="Argon">
            <site type="LJ126" id="1" >
              <coords> <x>0.0</x> <y>0.0</y> <z>0.0</z> </coords>
              <mass>1.0</mass>
              <sigma>1.0</sigma>
              <epsilon>1.0</epsilon>
            </site>
          </moleculetype>
      </components>

      <phasespacepoint>
        <generator name="CubicGridGenerator">
<!--		<numMolecules>1000000000</numMolecules>-->
		<density>0.785302672</density>
		<binaryMixture>false</binaryMixture>
	</generator>
      </phasespacepoint>
    </ensemble>

    <algorithm>
      <parallelisation type="DomainDecomposition">
	<overlappingCollectives>yes</overlappingCollectives>
      </parallelisation>
      <datastructure type="LinkedCells">
          <cellsInCutoffRadius>1</cellsInCutoffRadius>
	  <traversalSelector>c08</traversalSelector>
      </datastructure>
      <cutoffs type="CenterOfMass" >
        <radiusLJ unit="reduced" >3.5</radiusLJ>
      </cutoffs>
      <electrostatic type="ReactionField" >
        <epsilon>1.0e+10</epsilon>
      </electrostatic>

      <!--
      <thermostats>
        <thermostat type="VelocityScaling" componentName="Argon">
          <temperature>1</temperature>
        </thermostat>
      </thermostats>
      -->
    </algorithm>

    <output>
	<outputplugin name="FlopRateWriter">
           <mode>stdout</mode>
           <writefrequency>5</writefrequency>
        </outputplugin>
      <outputplugin name="VectorizationTuner">
	<mode>statistics</mode>
	<outputprefix>vect</outputprefix>
	<minmoleculecnt>32</minmoleculecnt>
	<maxmoleculecnt>32</maxmoleculecnt>
	<numRepetitionsMax>2500000</numRepetitionsMax>
	<moleculecntincreasetype>0</moleculenctincreasetype>
      </outputplugin>
	 <outputplugin name="SlowNodeDetector"/>
