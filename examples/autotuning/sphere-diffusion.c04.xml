<?xml version='1.0' encoding='UTF-8'?>
<mardyn version="20100525" >

  <simulation type="MD" >
    <integrator type="Leapfrog" >
      <!-- MD ODE integrator -->
      <timestep unit="reduced" >0.002</timestep>
    </integrator>

    <run>
      <currenttime>0</currenttime>
      <production>
        <steps>500000</steps>
      </production>
    </run>

    <ensemble type="NVT">
      <!-- Nparticles determined by the input file -->
      <temperature unit="reduced" >0.95</temperature>
      <domain type="box">
          <lx>320.0</lx>
          <ly>320.0</ly>
          <lz>320.0</lz>
      </domain>

      <components>
          <moleculetype id="1" name="Argon">
            <site type="LJ126" id="1" >
              <coords> <x>0.0</x> <y>0.0</y> <z>0.0</z> </coords>
              <mass>1.0</mass>
              <sigma>1.0</sigma>
              <epsilon>1.0</epsilon>
            </site>
          </moleculetype>
      </components>

      <phasespacepoint>
        <generator name="mkesfera">
          <droplet>
            <radius>90</radius>
            <density>0.85</density>
            <center> <x>80</x> <y>80</y> <z>80</z> </center>
          </droplet>
          <outer-density>0.006516</outer-density>
        </generator>
      </phasespacepoint>
    </ensemble>

    <algorithm>
      <parallelisation type="DomainDecomposition">
      	<CommunicationScheme>indirect</CommunicationScheme>
      </parallelisation>
      <datastructure type="LinkedCells">
          <traversalSelector>c04</traversalSelector>
      	  <autotuning>false</autotuning>
          <autotuningSteps>3000</autotuningSteps>
          <cellsInCutoffRadius>1</cellsInCutoffRadius>
      </datastructure>
      <cutoffs type="CenterOfMass" >
        <radiusLJ unit="reduced" >2.5</radiusLJ>
      </cutoffs>
      <electrostatic type="ReactionField" >
        <epsilon>1.0e+10</epsilon>
      </electrostatic>
    </algorithm>

    <output>
      <outputplugin name="CheckpointWriter">
        <writefrequency>50000</writefrequency>
        <outputprefix>sphere-diffusion</outputprefix>
        <type>ASCII</type>
      </outputplugin>
    </output>

  </simulation>
</mardyn>
